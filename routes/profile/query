SELECT
    *
FROM
    "questions";



SELECT
    q.level,
    COUNT(DISTINCT uq.question_id) AS total_solved_questions
FROM
    questions q
    LEFT JOIN user_questions uq ON q.question_id = uq.question_id
WHERE
    uq.user_id = '523cbcea173111eea88ae3300d621ca4'
    or uq.user_id IS NULL
GROUP BY
    q.level;


select
    level,
    count(question_id) AS total_available_questions
from
    questions
GROUP BY
    level;
